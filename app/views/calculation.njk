{% extends 'layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/table/macro.njk" import govukTable %}    

{% block beforeContent %}
  {{ govukBackLink(model.backLink) 
    attributes: {
      id: "back"
    } }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      {{ govukPanel({
        titleText: "Calculation complete"
      }) }}

      <p class="govuk-body">{{ model.confirmation }}</p>

      {% if not model.isSingleValue %}
        {{ govukTable(model.startingAmount) }}
      {% endif %}

      {{ govukTable(model.paymentBand) }}
      {{ govukTable(model.reduction) }}
      {{ govukTable(model.payment) }}
    </div>
  </div>
{% endblock %}
