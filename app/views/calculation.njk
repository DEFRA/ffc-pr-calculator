{% extends '_layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block beforeContent %}
  {{ govukBackLink({
        text: "Back",
        href: "/value",
        classes: "govuk-!-margin-bottom-7"
      }) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container" style="overflow-y: auto;">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ govukPanel({
          titleText: "BPS calculation complete"
        }) }}
        <p class="govuk-body">{{ model.confirmation }}</p>
        {{ govukTable(model.paymentSummary)}}
        <p class="govuk-body">
          We are making BPS 2022 and 2023 payments in two instalments, with the first instalment of around 50% of your estimated payment for the year.
        </p>
        <p class="govuk-body">
          If you would like to see a breakdown of your estimated reductions see the table below
        </p>
        <br/>
        {{ govukTable(model.reduction) }}
        <br/>
        {{ govukTable(model.paymentBand) }}
       

      </div>
    </div>
  </div>
{% endblock %}
