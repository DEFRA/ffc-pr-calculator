{% extends 'layout.njk' %}
{% set mainClasses = "govuk-main-wrapper--auto-spacing" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/table/macro.njk" import govukTable %}    
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block beforeContent %}
  {{ govukBackLink(model.backLink) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      {{ govukPanel({
        titleText: "Calculation complete"
      }) }}

      <p class="govuk-body">{{ model.confirmation }}</p>

      {% if not model.isSingleValue %}
        {{ govukTable(model.startingAmount) }}
      {% endif %}

      {{ govukTable(model.paymentBand) }}
      {{ govukTable(model.reduction) }}
      <h2 class="govuk-heading-m">
        Your payments after progressive reductions
      </h2>
      {{ govukSummaryList(model.paymentSummary)}}
    </div>
  </div>
{% endblock %}
